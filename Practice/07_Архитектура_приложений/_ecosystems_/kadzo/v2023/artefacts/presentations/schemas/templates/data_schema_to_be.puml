'Стили Person
skinparam component<<Person>> {
	backgroundColor Transparent
	borderColor Transparent
	shadowing false
	hide stereotype
	borderthickness 1
	FontSize 14
    FontStyle Bold
}

skinparam frame {
    borderthickness 2
	fontstyle bold
	borderstyle dashed

	'backgroundColor #ffcc66

	attributefontsize 11
}

skinparam node {
    borderthickness 1
	fontstyle bold
	borderStyle dashed

	attributefontsize 11
    backgroundcolor #GreenYellow/LightGoldenRodYellow
}

'hide stereotype
hide <<>> stereotype

set namespaceSeparator none
title {{&title}}

@startuml

{{#clients}}
    component {{id}} <<Person>> [
        ..<size:42><&person,color=Blue></size>..
        ..{{&title}}..
    ]
{{/clients}}

!if ({{has_channels}})
node "Каналы взаимодействия с клиентом" as channels_boundary{
!endif
    {{#channels}}
        rectangle "{{&title}}" as {{id}}
    {{/channels}}
!if ({{has_channels}})
}
!endif

{{#systems}}
    {{#groups}}
        rectangle "{{&title}}" as {{id}} {
    {{/groups}}
    !if ({{has_subsystems}})
        frame "{{&title}}" as {{id}}.frame {
        class "{{&title}}" as {{id}} <<{{notation}}>> [[/entities/kadzo.v2023.systems/card?id={{id}}]]
        !if ({{has_functions}})
            {
            {{#functions}}
                {field} <size:8><U+25E6> {{&.}}</size>
            {{/functions}}
            {{#flow_data}}
                {method} <color:silver><size:8><U+25E6> {{&.}} </size>
            {{/flow_data}}
            }
        !else
            {
                {field}<size:8></size>
            }
        !endif

        frame "Подсистемы {{&title}}" as {{id}}.sub {
        {{#subsystems}}
            class "{{&ss_title}}" as {{ss_id}} <<{{ss_notation}}>> [[/entities/kadzo.v2023.systems/card?id={{id}}]]
            !if ({{ss_has_functions}})
                {
                {{#ss_functions}}
                    {field} <size:8><U+25E6> {{&.}}</size>
                {{/ss_functions}}
                {{#ss_flow_data}}
                    {method} <color:silver><size:8><U+25E6> {{&.}} </size>
                {{/ss_flow_data}}
                }
            !else
                {
                    {field}<size:8></size>
                }
            !endif
        {{/subsystems}}
        }
        }
    !else
    class "{{&title}}" as {{id}} << {{notation}} >> [[/entities/kadzo.v2023.systems/card?id={{id}}]]
        !if ({{has_functions}})
            {
            {{#functions}}
                {field} <size:8><U+25E6> {{&.}}</size>
            {{/functions}}
            {{#flow_data}}
                {method} <color:silver><size:8><U+25E6> {{&.}} </size>
            {{/flow_data}}
            }
        !else
            {
                {field}<size:8></size>
            }
        !endif
    !endif
    {{#groups}}
    }
    {{/groups}}
{{/systems}}

{{#tech_services}}
    rectangle "Технические сервисы" {
        class "{{&title}}" as {{id}} <<Технический сервис>>
    }
{{/tech_services}}

{{#integrations}}
    !if ({{is_new}})
        "{{from}}" ------> "{{to}}" #{{color}};text:{{color}} : [[/entities/kadzo.v2023.integrations/card?id={{link_id}} <U+271A>{{code}}]]
    !elseif ({{is_deleted}})
        "{{from}}" ------> "{{to}}" #{{color}};text:{{color}} : [[/entities/kadzo.v2023.integrations/card?id={{link_id}} <U+2716>{{code}}]]
    !else
        "{{from}}" ------> "{{to}}" #{{color}};text:{{color}} : [[/entities/kadzo.v2023.integrations/card?id={{link_id}} {{code}}]]
    !endif
{{/integrations}}

{{#channels_links}}
    {{channel}} -[dotted]down----- {{system}}
{{/channels_links}}

{{#clients_links}}
    {{client}} -[dotted]down----- {{channel}}
{{/clients_links}}

@enduml